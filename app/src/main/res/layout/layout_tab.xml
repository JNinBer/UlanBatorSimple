<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true"
            android:weightSum="4">


        <RelativeLayout
                android:id="@+id/mainBottomTabOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bottom_tab_layout"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:id="@+id/bottom_tab_iv_one"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#ff1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_tab_iv_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Home"/>
        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/mainBottomTabTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bottom_tab_layout"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:id="@+id/bottom_tab_iv_two"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#ff1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_tab_iv_two"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Find"/>

        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/mainBottomTabThere"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bottom_tab_layout"
                android:clickable="true"
                android:focusable="true">


            <ImageView
                    android:id="@+id/bottom_tab_iv_there"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#ff1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_tab_iv_there"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Message"/>
        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/mainBottomTabFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bottom_tab_layout"
                android:clickable="true"
                android:focusable="true">


            <ImageView
                    android:id="@+id/bottom_tab_iv_four"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#ff1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_tab_iv_four"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="My"/>

        </RelativeLayout>

    </LinearLayout>
</layout>